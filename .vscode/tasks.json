    "version": "2.0.0",
    "type": "shell",
    "command": "make",
    "args": [
        "-s", "-C", "build"
    ],
    "tasks": [
        {
            "taskName": "all",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$valac"
            ]
        },
        {
            "taskName": "clean",
            "problemMatcher": []
        },
        {
            "taskName": "ev3devKit-ui-demo",
            "problemMatcher": [
                "$valac"
            ]
        },
        {
            "taskName": "ev3devkit-0.5-typelib",
            "problemMatcher": [
                "$valac"
            ]
        }
    ]
}